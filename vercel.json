{
    "version": 2,
    "build": {
        "cmd": "npm run build"
    },
    "functions": {
        "api/*": {
            "runtime": "nodejs18.x",
            "entryPoint": "dist/main.js",
            "handler": "dist/main",
            "includeFiles": "dist/**",
            "excludeFiles": ["node_modules/**/*", "test/**/*"]
        }
    },
    "routes": [
      {
        "src": "/(.*)",
        "functions": {
            "api/*": "api"
        }
      }
    ],
    "output": {
        "distDir": "dist"
    }
}